{
  "$id": "https://ewf.local/schemas/connector-registry.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EWF Connector Registry v1",
  "type": "object",
  "required": ["schemaVersion", "connectors"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "enum": ["1.0"] },
    "connectors": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/ConnectorDef" }
    }
  },
  "$defs": {
    "JsonSchema": {
      "type": "object",
      "additionalProperties": true
    },

    "ConnectorDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["connectorId", "meta", "configSchema", "operations"],
      "properties": {
        "connectorId": { "type": "string", "minLength": 1, "maxLength": 64 },
        "meta": {
          "type": "object",
          "additionalProperties": false,
          "required": ["title"],
          "properties": {
            "title": { "type": "string", "minLength": 1 },
            "description": { "type": "string" },
            "tags": { "type": "array", "items": { "type": "string" } }
          }
        },

        "configSchema": {
          "$ref": "#/$defs/JsonSchema",
          "description": "Schema for connector configuration stored in DB."
        },

        "operations": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/OperationDef" }
        },

        "impl": {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind", "ref"],
          "properties": {
            "kind": { "type": "string", "enum": ["nestjsProviderRef", "httpGeneric", "tsPluginRef"] },
            "ref": {
              "type": "string",
              "description": "Implementation reference. e.g. '@ewf/connectors/http#ConnHttpClient'"
            }
          }
        }
      }
    },

    "OperationDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["operationId", "transport", "requestSchema", "responseSchema"],
      "properties": {
        "operationId": { "type": "string", "minLength": 1, "maxLength": 128 },
        "summary": { "type": "string" },
        "description": { "type": "string" },

        "transport": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type"],
          "properties": {
            "type": { "type": "string", "enum": ["http"] },
            "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
            "path": { "type": "string" }
          }
        },

        "requestSchema": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "params": { "$ref": "#/$defs/JsonSchema" },
            "query": { "$ref": "#/$defs/JsonSchema" },
            "headers": { "$ref": "#/$defs/JsonSchema" },
            "body": { "$ref": "#/$defs/JsonSchema" }
          }
        },

        "responseSchema": { "$ref": "#/$defs/JsonSchema" },

        "hints": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "timeoutMs": { "type": "integer", "minimum": 1, "maximum": 600000 },
            "retryableStatus": { "type": "array", "items": { "type": "integer" } }
          }
        }
      }
    }
  }
}
