{
  "$id": "https://ewf.local/schemas/step-registry.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EWF Step Registry v1",
  "type": "object",
  "required": ["schemaVersion", "nodes"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "enum": ["1.0"] },
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/$defs/NodeTypeDef" },
      "minItems": 1
    }
  },
  "$defs": {
    "JsonSchema": {
      "description": "Any JSON Schema (used for input/output typing).",
      "type": "object",
      "additionalProperties": true
    },

    "PortDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "direction"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "direction": { "type": "string", "enum": ["in", "out"] },
        "multiple": { "type": "boolean", "default": false },
        "optional": { "type": "boolean", "default": true }
      }
    },

    "NodeTypeDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "typeVersion", "meta", "ports", "io"],
      "properties": {
        "type": { "type": "string", "minLength": 1, "maxLength": 128 },
        "typeVersion": { "type": "integer", "minimum": 1 },

        "meta": {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "category"],
          "properties": {
            "title": { "type": "string", "minLength": 1 },
            "description": { "type": "string" },
            "category": { "type": "string", "minLength": 1 },
            "tags": { "type": "array", "items": { "type": "string" } },
            "icon": { "type": "string" }
          }
        },

        "ports": {
          "type": "array",
          "items": { "$ref": "#/$defs/PortDef" },
          "default": []
        },

        "io": {
          "type": "object",
          "additionalProperties": false,
          "required": ["inputsSchema", "outputsSchema"],
          "properties": {
            "inputsSchema": { "$ref": "#/$defs/JsonSchema" },
            "outputsSchema": { "$ref": "#/$defs/JsonSchema" }
          }
        },

        "defaults": {
          "type": "object",
          "additionalProperties": true,
          "description": "Node-level default inputs (authoring-time)."
        },

        "constraints": {
          "type": "object",
          "additionalProperties": true,
          "description": "Extra validation rules not expressible in JSON Schema."
        },

        "impl": {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind", "ref"],
          "properties": {
            "kind": { "type": "string", "enum": ["tsPluginRef", "jsonOnly"] },
            "ref": {
              "type": "string",
              "description": "When kind=tsPluginRef, points to plugin module export like '@ewf/nodes/flow.if#FlowIfNodeV1'"
            }
          }
        }
      }
    }
  }
}
